<div class="container">
    <div class="row">
        <h1 class="text-center espaciado-simple">Listado de Productos</h1>
    </div>
    <div class="row justify-content-end">
        <div class="col-2">
            <a href="/alta" class="btn btn-primary mb-3">Agregar producto</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover tp-3 text-center">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Imagen</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {{#each productos}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.nombre}}</td>
                        <td>$ {{this.precio}}</td>
                        <td><img src="{{this.imagen}}" alt="{{this.nombre}}" width="100" /></td>
                        <td>
                            <a href="/index/modificar/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
                            <button class="btn btn-sm btn-danger delete-product" data-id="{{this.id}}">Eliminar</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>