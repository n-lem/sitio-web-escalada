<div class="container">
    <div class="">
    <h1 class="text-center espaciado-simple">Listado de Productos</h1>
    </div>
    <div class="row justify-content-end">
        <div class="col-2">
            <a href="/admin/productos/nuevos" class="btn btn-primary mb-3">Agregar producto</a>
        </div>
        <table class="table table-striped table-hover tp-3 text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripci√≥n</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each productos}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.nombre}}</td>
                    <td>{{this.descripcion}}</td>
                    <td>$ {{this.precio}}</td>
                    <td>{{this.stock}}</td>
                    <td><img src="{{this.imagen}}" alt="{{this.nombre}}" width="222"></td>
                    <td>
                        <a href="/admin/products/edit/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
                        <button class="btn btn-sm btn-danger delete-product" data-id="{{this.id}}">Eliminar</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>